{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "threat-actor",
  "description": "A threat actor describes an individual or group with malicious intent.",
  "type": "object",
  "allOf": [
    {
      "$ref": "../common/core.json"
    },
    {
      "$ref": "../common/descriptive-properties.json"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of this object, which MUST be the literal `threat-actor`.",
          "enum": ["threat-actor"]
        },
        "name": {
		   "type": "string",
		   "description": "A name used to identify this threat actor."
		},
        "motivations": {
		   "type": "array",
		   "description": "The reason, motivation, or purpose behind this Threat Actor. Open Vocab - motivation-ov",
		   "items": "string"
		},
		"labels": {
		   "type": "array",
		   "description": "This field specifies the type of threat actor. Open Vocab - threat-actor-label-ov",
		   "items": "string"
		},
        "sophistication": {
           "type": "string",
		   "description": "This field specifies the level of sophistication pertaining to this threat actor. Open Vocab - threat-actor-sophistication-ov"
        },
        "objectives": {
		   "type": "array",
		   "description": "The goal or intended effect of this threat actor.",
		   "items": "string"
        }
      }
    }
  ],
  "required": ["name"],
  "definitions": {
    "motivation-ov": {
      "type": "string",
      "enum": [
	    "criminal",
        "ideological",
        "anti-corruption",
        "anti-establishment",
        "environmental",
        "ethnic-or-nationalist",
        "information-freedom",
        "religious",
        "security-awareness",
        "human-rights",
        "ego",
        "financial-or-economic",
		"fraud",
        "military",
        "opportunistic",
        "political",
        "fear"
      ]
    },
    "threat-actor-sophistication-ov": {
      "type": "string",
      "enum": [
        "innovator",
        "expert",
        "practitioner",
        "novice",
        "aspirant",
        "other"
      ]
    },
	"threat-actor-label-ov": {
	   "type": "string",
	   "enum": [
	     "cyber-espionage-operations",
		 "hacker",
		 "hacker-white-hat",
		 "hacker-gray-hat",
		 "hacker-black-hat",
		 "hacktivist",
		 "state-actor-agency",
		 "ecrime-actor-credential-theft-botnet-operator",
		 "ecrime-actor-credential-theft-botnet-service",
		 "ecrime-actor-malware-developer",
		 "ecrime-actor-money-laundering-network",
		 "ecrime-actor-organized-crime-actor",
		 "ecrime-actor-spam-service",
		 "ecrime-actor-traffic-service",
		 "ecrime-actor-underground-call-service",
		 "insider-threat",
		 "other"
	   ]
	}
  }
}
        
